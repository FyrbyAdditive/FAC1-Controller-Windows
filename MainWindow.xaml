<Window x:Class="FAC1_Controller_Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FAC1 Pan &amp; Tilt Controller"
        Width="280" 
        Height="400"
        MinWidth="280"
        MinHeight="400"
        MaxWidth="280"
        Background="#1E1E1E"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="#2A2A2A">
            <Menu.Resources>
                <!-- Complete override of MenuItem style to eliminate Windows theme borders -->
                <Style TargetType="MenuItem">
                    <Setter Property="Background" Value="#2A2A2A"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Padding" Value="8,4"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="MenuItem">
                                <Border Name="Border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="Transparent"
                                        BorderThickness="0"
                                        CornerRadius="0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="Icon"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="Shortcut"/>
                                            <ColumnDefinition Width="13"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Icon/Check area -->
                                        <ContentPresenter Name="Icon"
                                                        Grid.Column="0"
                                                        Margin="6,0,6,0"
                                                        VerticalAlignment="Center"
                                                        ContentSource="Icon"/>
                                        
                                        <!-- Check mark for checkable items -->
                                        <Path Name="CheckMark"
                                            Grid.Column="0"
                                            Width="10"
                                            Height="10"
                                            Visibility="Collapsed"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Fill="White"
                                            Data="M 0 2 L 0 4.8 L 5 9.8 L 14.5 0.3 L 12.5 -1.7 L 5 6.8 Z"/>
                                        
                                        <!-- Menu text -->
                                        <ContentPresenter Name="HeaderHost"
                                                        Grid.Column="1"
                                                        ContentSource="Header"
                                                        VerticalAlignment="Center"
                                                        TextBlock.Foreground="{TemplateBinding Foreground}"/>
                                        
                                        <!-- Submenu arrow -->
                                        <Path Name="Arrow"
                                            Grid.Column="3"
                                            Width="6"
                                            Height="10"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Fill="White"
                                            Data="M 0 0 L 0 7 L 4 3.5 Z"
                                            Visibility="Collapsed"/>
                                        
                                        <!-- Popup for submenus -->
                                        <Popup Name="Popup"
                                             Placement="Bottom"
                                             IsOpen="{TemplateBinding IsSubmenuOpen}"
                                             AllowsTransparency="True"
                                             Focusable="False"
                                             PopupAnimation="Fade">
                                            <Border Name="SubmenuBorder"
                                                  SnapsToDevicePixels="True"
                                                  Background="#2A2A2A"
                                                  BorderBrush="#404040"
                                                  BorderThickness="1"
                                                  CornerRadius="2">
                                                <StackPanel IsItemsHost="True" 
                                                          KeyboardNavigation.DirectionalNavigation="Cycle"/>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </Border>
                                
                                <ControlTemplate.Triggers>
                                    <!-- Show check mark for checked items -->
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                    </Trigger>
                                    
                                    <!-- Show arrow for items with submenus -->
                                    <Trigger Property="HasItems" Value="True">
                                        <Setter TargetName="Arrow" Property="Visibility" Value="Visible"/>
                                    </Trigger>
                                    
                                    <!-- Hover effect -->
                                    <Trigger Property="IsHighlighted" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#0078D4"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    
                                    <!-- Pressed effect -->
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#005A9E"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    
                                    <!-- Submenu open effect -->
                                    <Trigger Property="IsSubmenuOpen" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#404040"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    
                                    <!-- Disabled state -->
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="#666666"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
                
                <!-- Style for separators -->
                <Style TargetType="Separator">
                    <Setter Property="Height" Value="1"/>
                    <Setter Property="Margin" Value="2,2,2,2"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Separator">
                                <Border Height="1" 
                                      Background="#404040"
                                      BorderThickness="0"/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Menu.Resources>
            
            <MenuItem Header="Calibration">
                <MenuItem Header="Set Center Position" 
                          Name="SetCenterMenuItem"
                          Click="SetCenterMenuItem_Click"
                          ToolTip="Set current position as center for both servos"/>
                <Separator/>
                <MenuItem Header="Invert Pan Axis" 
                          Name="InvertPanMenuItem"
                          IsCheckable="True"
                          Click="InvertPanMenuItem_Click"
                          ToolTip="Reverse pan servo direction"/>
                <MenuItem Header="Invert Tilt Axis" 
                          Name="InvertTiltMenuItem"
                          IsCheckable="True"
                          Click="InvertTiltMenuItem_Click"
                          ToolTip="Reverse tilt servo direction"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About..." 
                          Name="AboutMenuItem"
                          Click="AboutMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <Grid Margin="10,10,10,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>     <!-- Control Buttons -->
            <RowDefinition Height="Auto"/>     <!-- Connection Status -->
        </Grid.RowDefinitions>

        <!-- Control Buttons -->
        <Border Grid.Row="0" 
                Background="#2A2A2A" 
                BorderBrush="#404040" 
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,10">
            <StackPanel>
                <!-- Always on Top -->
                <CheckBox Name="AlwaysOnTopCheckBox"
                          Content="Always on Top"
                          Style="{StaticResource ModernCheckBoxStyle}"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"
                          Checked="AlwaysOnTopCheckBox_Checked"
                          Unchecked="AlwaysOnTopCheckBox_Unchecked"/>
                
                <!-- Arrow Buttons Grid -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Tilt Up -->
                <Button Grid.Row="0" Grid.Column="1"
                        Name="TiltUpButton"
                        Content="↑"
                        Style="{StaticResource TiltButtonStyle}"
                        Click="TiltUpButton_Click"/>

                <!-- Pan Left, Center, Pan Right -->
                <Button Grid.Row="1" Grid.Column="0"
                        Name="PanLeftButton"
                        Content="←"
                        Style="{StaticResource PanButtonStyle}"
                        Click="PanLeftButton_Click"/>
                
                <Button Grid.Row="1" Grid.Column="1"
                        Name="CenterButton"
                        Content="●"
                        Style="{StaticResource CenterButtonStyle}"
                        Click="CenterButton_Click"
                        ToolTip="Center Camera"/>
                
                <Button Grid.Row="1" Grid.Column="2"
                        Name="PanRightButton"
                        Content="→"
                        Style="{StaticResource PanButtonStyle}"
                        Click="PanRightButton_Click"/>

                <!-- Tilt Down -->
                <Button Grid.Row="2" Grid.Column="1"
                        Name="TiltDownButton"
                        Content="↓"
                        Style="{StaticResource TiltButtonStyle}"
                        Click="TiltDownButton_Click"/>
            </Grid>
            </StackPanel>
        </Border>

        <!-- Connection Status Footer -->
        <Border Grid.Row="1" 
                Background="#2A2A2A" 
                BorderBrush="#404040" 
                BorderThickness="1"
                CornerRadius="5"
                Padding="10"
                Margin="0,10,0,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- USB Connection Status -->
                <Ellipse Grid.Row="0" Grid.Column="0" 
                         Name="UsbStatusIndicator"
                         Width="10" Height="10" 
                         Fill="Red"
                         VerticalAlignment="Center"
                         Margin="0,0,6,0"/>
                <TextBlock Grid.Row="0" Grid.Column="1" 
                           Name="UsbStatusText"
                           Text="USB: Disconnected"
                           Style="{StaticResource StatusTextStyle}"
                           FontSize="10"
                           VerticalAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="2" 
                        Name="ReconnectButton"
                        Content="Reconnect"
                        Width="75" Height="20"
                        FontSize="9"
                        Background="#0078D4"
                        Foreground="White"
                        BorderBrush="#0078D4"
                        Click="ReconnectButton_Click"/>

                <!-- Pan Servo Status (only visible when USB connected and servo has issues) -->
                <Ellipse Grid.Row="1" Grid.Column="0" 
                         Name="PanStatusIndicator"
                         Width="10" Height="10" 
                         Fill="Red"
                         VerticalAlignment="Center"
                         Margin="0,3,6,0"
                         Visibility="Collapsed"/>
                <TextBlock Grid.Row="1" Grid.Column="1" 
                           Name="PanStatusText"
                           Text="Pan Servo (ID 6): Disconnected"
                           Style="{StaticResource StatusTextStyle}"
                           FontSize="10"
                           VerticalAlignment="Center"
                           Margin="0,3,0,0"
                           Visibility="Collapsed"/>

                <!-- Tilt Servo Status (only visible when USB connected and servo has issues) -->
                <Ellipse Grid.Row="2" Grid.Column="0" 
                         Name="TiltStatusIndicator"
                         Width="10" Height="10" 
                         Fill="Red"
                         VerticalAlignment="Center"
                         Margin="0,3,6,0"
                         Visibility="Collapsed"/>
                <TextBlock Grid.Row="2" Grid.Column="1" 
                           Name="TiltStatusText"
                           Text="Tilt Servo (ID 4): Disconnected"
                           Style="{StaticResource StatusTextStyle}"
                           FontSize="10"
                           VerticalAlignment="Center"
                           Margin="0,3,0,0"
                           Visibility="Collapsed"/>
            </Grid>
        </Border>

        </Grid>
    </DockPanel>
</Window>