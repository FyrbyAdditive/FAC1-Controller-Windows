<Window x:Class="FAC1_Controller_Windows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About FAC1 Controller"
        Width="400" 
        Height="380"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="170"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Logo -->
        <Image Grid.Row="0"
               Source="FAME-150-150.png"
               Width="150"
               Height="150"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Margin="0,20,0,0"/>

        <!-- App Name -->
        <TextBlock Grid.Row="1"
                   Text="FAC1 Controller"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <!-- Version -->
        <TextBlock Grid.Row="2"
                   Text="Version 1.0"
                   FontSize="12"
                   Foreground="#888888"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <!-- Copyright -->
        <TextBlock Grid.Row="3"
                   Text="Copyright Â© 2025"
                   FontSize="11"
                   Foreground="#888888"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <!-- Author -->
        <TextBlock Grid.Row="4"
                   Text="Timothy Ellis"
                   FontSize="11"
                   Foreground="#888888"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <!-- Company -->
        <TextBlock Grid.Row="5"
                   Text="Fyrby Additive Manufacturing &amp; Engineering"
                   FontSize="11"
                   Foreground="#888888"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <!-- Spacer -->
        <Grid Grid.Row="6"/>

        <!-- Close Button -->
        <Button Grid.Row="7"
                Content="OK"
                Width="100"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#0078D4"
                Foreground="White"
                BorderBrush="#0078D4"
                Click="CloseButton_Click"/>
    </Grid>
</Window>